<%= form_for [@recipe, @review] do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :rating %>
	<%= f.collection_radio_buttons :rating, Review::RATINGS, :to_i, :to_i %>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<%= f.submit(((params[:action] == 'new') ? 'Create' : 'Update') + ' review') %>
<% end %>
