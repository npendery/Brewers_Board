<%= form_for [@recipe, @review] do |f| %>
	<%= f.label :title, class: "form-label" %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :rating, class: "form-label" %>
	<%= field_set_tag nil, class: "rating" do %>
		<%= radio_button_tag("review[rating]", 5) %>
		<%= label_tag('review_rating_5', '') %>
		<%= radio_button_tag("review[rating]", 4) %>
		<%= label_tag('review_rating_4', '') %>
		<%= radio_button_tag("review[rating]", 3) %>
		<%= label_tag('review_rating_3', '') %>
		<%= radio_button_tag("review[rating]", 2) %>
		<%= label_tag('review_rating_2', '') %>
		<%= radio_button_tag("review[rating]", 1) %>
		<%= label_tag('review_rating_1', '') %>
	<% end %>
	<br><br>
	<br><br>
	<%= f.label :description, class: "form-label" %>
	<%= f.text_field :description %>
	<%= f.submit(((params[:action] == 'new') ? 'Create' : 'Update') + ' review', class: "submit-form") %>
<% end %>
