<%= form_for [@group, @event] do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.label :street %>
	<%= f.text_field :street %>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<%= f.label :state %>
	<%= f.collection_select :state, Event::STATES, :to_s, :to_s %>
	<%= f.label :date %>
	<%= f.date_field :date, min: Date.today %>
	<%= f.label :time %>
	<%= f.time_field :time %>
	<%= f.submit(((params[:action] == 'new') ? 'Create' : 'Update') + ' event') %>
<% end %>
