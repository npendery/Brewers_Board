<%= form_for [@group, @event] do |f| %>
	<%= f.label :title, class: "form-label" %>
	<%= f.text_field :title %>
	<%= f.label :description, class: "form-label" %>
	<%= f.text_area :description %>
	<%= f.label :street, class: "form-label" %>
	<%= f.text_field :street %>
	<%= f.label :city, class: "form-label" %>
	<%= f.text_field :city %>
	<%= f.label :state, class: "form-label" %>
	<%= f.collection_select :state, Event::STATES, :to_s, :to_s %>
	<%= f.label :date, class: "form-label" %>
	<%= f.date_field :date, min: Date.today %>
	<%= f.label :time, class: "form-label" %>
	<%= f.time_field :time %>
	<%= f.submit(((params[:action] == 'new') ? 'Create' : 'Update') + ' event', class: "submit-form") %>
<% end %>
