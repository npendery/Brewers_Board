<h1>Recipes Index</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe_path(recipe) %></td>
        <td><%= recipe.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
<%= link_to "Back to home", root_path %>
</div>
