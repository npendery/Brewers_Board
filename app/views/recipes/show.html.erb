<h3><%= @recipe.name %></h3>


<h5> Description </h5>
<div> <%= @recipe.description %> </div>


<h5> Malt and Grains </h5>
<div> <%= @recipe.malt_grains %> </div>


<h5> Hops Schedule </h5>
<div> <%= @recipe.hops_schedule %> </div>


<h5> Directions </h5>
<div> <%= @recipe.directions %> </div>


<h5> Yeast </h5>
<div> <%= @recipe.yeast %> </div>


<% if @recipe.user == current_user %>
  <%= link_to "Edit Recipe", edit_recipe_path(@recipe) %>
  <%= link_to "Delete Recipe", recipe_path(@recipe), method: :delete %>
<% end %>

<% if @recipe.reviews.find_by(user: current_user) == nil %>
  <div class="row">
    <%= link_to "Review Recipe", new_recipe_review_path(@recipe), remote: true %>
    <div class="col-md-6 col-md-offset-2" id="review-form" style="display:none;">
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-7 col-md-offset-1" id="reviews">
    <%= render "reviews_index", object: @reviews %>
  </div>
</div>

<%= link_to "Back to Recipes", recipes_path %>
