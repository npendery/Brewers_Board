<%= form_for @recipe do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<br>
	<%= f.label :description, "Description" %>
	<%= f.text_field :description %>
	<br>
	<br>
	<%= f.label :style, "Style" %>
	<%= f.collection_select :style, Recipe::STYLES, :to_s, :to_s, prompt: true %>
	<br>
	<br>
	<%= f.label :ingredients, "Ingredients" %>
	<%= f.text_area :ingredients %>
	<br>
	<br>
	<%= f.label :instructions, "Instructions" %>
	<%= f.text_area :instructions %>
	<br>
	<br>
	<%= f.label :yielder, "Yield" %>
	<%= f.text_field :yielder %>
	<br>
	<br>
	<%= f.submit(((params[:action] == 'new') ? 'Create' : 'Update') + ' recipe', class: "submit-form") %>
<% end %>
