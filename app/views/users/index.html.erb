<div class="title">Community</div>

  <% @users.each do |user| %>
  <div class="row index">
    <div class="medium-6 large-6 columns">
      <%= image_tag(user.profile_photo, size: "100", class: "photo-edit") %>
    </div>
    <div class="medium-6 large-6 columns">
      <article class="text-center member-list member<%= user.id %>">
        User: <%= link_to user.username, user_path(user), class: "member" %><br>
        Location: <%= user.city %><br>
        <% if current_user.admin == true %>
        Admin: <%= user.admin %>
        <div class="delete-user">
          <%= link_to "Delete user", user_path(user), method: :delete, class: "member" %>
        </div>
        <div class="change-status">
          <%= link_to "Change admin status", user_path(user), method: :put, class: "member" %>
        </div>
        <% end %>
      </article>
    </div>
  </div>
  <br>
  <% end %>
<br>
<div>
<%= link_to "Back to home", root_path, class: "back-link" %>
</div>
